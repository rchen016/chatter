<% include ../partials/header %>


<div class="container">
	<div class="row">
		<div class="col-0 col-md-3">

		</div>
		<div class="col-12 col-md-6">
			<ul class="list-group">
				<%for(var i=0;i<currentUser.friendList.length;i++){ %>

					<li class="list-group-item justify-content-between align-items-center friendList">
						<%=	currentUser.friendList[i] %>
						<form action="/message/<%= currentUser.friendList[i] %>/viewmessage" method="POST">
							<input style="display:none;" name="sendTo" value=<%= currentUser.friendList[i] %> />
							<button class="btn float-right bg-secondary float-right">View</button>
						</form>
					</li>
				<% } %>
			</ul>
		</div>
		<div class="col-0 col-md-3">

		</div>
	</div>
</div>

