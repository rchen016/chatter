<% include ../partials/header %>

<html>
	<div class="container">
		<h1 style="text-align:center;">Request Friend</h1>
		<div class="row">
			<div class="col-0 col-md-3">

			</div>
			<div class="col-12 col-md-6">
				<div>
					<form action="/friendRequest" method="POST">
						<div class="form-group">
							<input class="userField form-control" type="text" name="username" placeholder="Username" />
						</div>
						<div class="form-group text-center">
							<button style="width:35%;"class="btn btn-lg btn-secondary btn-block addBtn">Add</button>
						</div>
					</form>
				</div>
				<ul class="list-group">
					<% for(var i=0;i<currentUser.friendReqList.length;i++){ %>
						<li class="list-group-item justify-content-between align-items-center friendList">
							<%=	currentUser.friendReqList[i] %>
							<form method="POST" action="/addFriend">
								<button class="btn btn-secondary" name="addfriend" value=<%= currentUser.friendReqList[i] %> >Add</button>
							</form>
						</li>
					<% } %>
				</ul>
			</div>
			<div class="col-0 col-md-3">

			</div>
		</div>
	</div>
</html>


<% include ../partials/footer %>
