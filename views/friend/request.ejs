<% include ../partials/header %>

<html>
	<div class="container">
		<h1 style="text-align:center;">Request Friend</h1>
		<div style="width:30%; margin:25px auto;">
			<form action="/friendRequest" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="username" placeholder="Username" />
				</div>
				<div class="form-group text-center">
					<button class="btn btn-lg btn-primary btn-block">Add</button>
				</div>
			</form>
			<a href="#">Go Back</a>
		</div>
<ul class="list-group">
		<% for(var i=0;i<currentUser.friendReqList.length;i++){ %>
			<li class="list-group-item d-flex justify-content-between align-items-center">
				<%=	currentUser.friendReqList[i] %>
			</li>
			<form method="POST" action="/addFriend">
				<button name="addfriend" value=<%= currentUser.friendReqList[i] %> >Add</button>
			</form>
		<% } %>
	</div>
</html>


<% include ../partials/footer %>
